#: import smn kivy.uix.screenmanager
#: import math math

<Indoor>:
    clockslayout: clockslayout
    waitscr: waitscr
    digiclock: digiclock
    camera: camera
    settings: settings

    ScreenManager:
        size_hint: 1, 1
        id: _screen_manager
        transition: smn.NoTransition() #FadeTransition()

        Screen:
            name: 'waitscr'
            id: waitscr
            on_enter: lblresult.text = 'Wait a moment...'

            MBoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Information:'
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9
                Label:
                    text: ''
                    id: lblresult
                    font_size: self.height/3
                    color: 0.9,0.9,0.9,0.9
                Label:
                    text: ''
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9

        Screen:
            name: 'digiclock'
            id: digiclock
            on_touch_down: root.swap2camera()

            MBoxLayout:
                id: clockslayout

        Screen:
            name: 'camera'
            id: camera
            on_pre_enter: root.startScreenTiming()
            on_enter: root.enterCameraScreen()
            on_leave: root.finishScreenTiming()
            on_pre_leave: root.hidePlayers()

            MBoxLayout:
                id: scattercameras
                orientation: 'vertical'

        SetScreen:
            name: 'settings'
            id: settings


# wait for video label:

<VideoLabel>:
    text: 'Wait...'
    font_size: '48dp' #self.height/4
    color: 0.3,0.3,0.9,0.9
    bgcolor: 0,0,0
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos


# image button:

<ImageButton>:
    imgpath: None
    btntext: ''
    font_size: '20px'
    lbltext: lbltext

    AsyncImage:
        source: self.parent.imgpath
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        size_hint: 1, None
        nocache: True
    Label:
        id: lbltext
        font_size: '32dp'
        color: 0.9,0,0,0.9
        text: self.parent.btntext
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        size_hint: 0, None


# call (2 images) button:

<CallButton>:
    size_hint: 1, None
    height: '47px'
    imgpath: imgpath
    imgpath2: imgpath2

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        pos: root.pos
        size: root.size
        size_hint: root.size_hint
        center_y: root.center_y

        AsyncImage:
            id: imgpath
            source: 'imgs/phone-call.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True

        AsyncImage:
            id: imgpath2
            source: 'imgs/call-dnd.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True

# door (4 images) button:

<DoorButton>:
    size_hint: 1, None
    height: '47px'
    lockimg1: lockimg1
    lockimg2: lockimg2
    lockimg3: lockimg3
    lockimg4: lockimg4

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        pos: root.pos
        size: root.size
        size_hint: root.size_hint
        center_y: root.center_y

        AsyncImage:
            id: lockimg1
            source: 'imgs/lock.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True

        AsyncImage:
            id: lockimg2
            source: 'imgs/nolock.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True

        AsyncImage:
            id: lockimg3
            source: 'imgs/nolock.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True

        AsyncImage:
            id: lockimg4
            source: 'imgs/nolock.png'
            size_hint: 1, 1
            center_y: root.center_y
            nocache: True


#CLOCK:

<DigiClockWidget>:
    DigiClock:
        font_size: '112dp' #self.height/4
        color: 0.3,0.6,0.9,0.9


<MyClockWidget>:
    face: face
    ticks: ticks
    canvas:
        Color:
            rgba: 1,1,1,1
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size: 0.9*min(root.size), 0.9*min(root.size)
    Ticks:
        id: ticks
        r: min(root.size)*0.9/2


# ListView label:

<MyListViewLabel>:
    font_size: 16
    halign: 'left'
    text_size: self.size


# QuickSettings label:

<MySetLabel>:
    font_size: '12px'
    size_hint_x: None
    width: '24px'


# Settings popup:

<SettingsPopupDlg>:
    closebutton: closebutton
    detailbutton: detailbutton
#    size_hint: .8, .8
#    spacing: 8
    orientation: 'vertical'
    valb: 100
    valv: 100
    valm: 100
    vals: 10
    vald: False
    valmusic: 'oldphone.wav'
    valclock: 'none'
    setline1: setline1
    setline2: setline2
    setline3: setline3
    setline4: setline4

    BoxLayout:
        orientation: 'horizontal'
        id: setline3
        subbox2: subbox2
        subbox3: subbox3
        size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'
            id: subbox2
            musicspinner: musicspinner

            AsyncImage:
                source: 'imgs/music.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Spinner:
                id: musicspinner
                size_hint: .5, None
                height: '40px'
                text: root.valmusic
                pos_hint: {'center_x': .5, 'center_y': .5}

        BoxLayout:
            orientation: 'horizontal'
            id: subbox3
            clockspinner: clockspinner

            AsyncImage:
                source: 'imgs/clock.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Spinner:
                id: clockspinner
                size_hint: .8, None
                height: '40px'
                text: root.valclock
                values: ('analog','digital','none')
                pos_hint: {'center_x': .5, 'center_y': .5}

    BoxLayout:
        orientation: 'horizontal'
        id: setline1
        size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'

            AsyncImage:
                source: 'imgs/speaker.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Slider:
                size_hint_x: .9
                min: 20
                max: 100
                step: 5
                value: root.valv
                on_value: root.valv = self.value
            MySetLabel:
                text: '%d' % root.valv

        BoxLayout:
            orientation: 'horizontal'

            AsyncImage:
                source: 'imgs/microphone.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Slider:
                size_hint_x: .9
                min: 20
                max: 100
                step: 5
                value: root.valm
                on_value: root.valm = self.value
            MySetLabel:
                text: '%d' % root.valm

    BoxLayout:
        orientation: 'horizontal'
        id: setline2
        subbox1: subbox1
        size_hint_y: 1

        BoxLayout:
            id: subbox1
            orientation: 'horizontal'
            brightslider: brightslider

            AsyncImage:
                source: 'imgs/brightness.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Slider:
                id: brightslider
                size_hint_x: .9
                min: 15
                max: 255
                step: 5
                value: root.valb
                on_value: root.valb = root.brightslider()
            MySetLabel:
                text: '%d' % root.valb

        BoxLayout:
            orientation: 'horizontal'

            AsyncImage:
                source: 'imgs/monitor.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Slider:
                size_hint_x: .9
                min: 0
                max: 120
                step: 1
                value: root.vals
                on_value: root.vals = self.value
            MySetLabel:
                text: '%d' % root.vals

    BoxLayout:
        orientation: 'horizontal'
        id: setline4
        size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'

            AsyncImage:
                source: 'imgs/nothing.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            AsyncImage:
                source: 'imgs/nothing.png'
                size_hint_x: None
                width: '48px'
                nocache: True

        BoxLayout:
            orientation: 'horizontal'

            AsyncImage:
                source: 'imgs/call-dnd.png'
                size_hint_x: None
                width: '48px'
                nocache: True
            Switch:
                active: root.vald
                on_active: root.vald = self.active

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        spacing: 8

        Button:
            id: detailbutton
            text: 'Detail'
            on_press: root.openDetailSettings()
        Image:
            source: 'imgs/nothing.png'
            size_hint: None, None
            size: '8px', '8px'
        Button:
            id: closebutton
            text: 'Close'
            on_press: root.closePopupSettings()


# Both side volume vertical sliders:

<SliderArea>:
    orientation: 'vertical'
    spacing: '8px'
    imgpath: 'imgs/settings1.png'
    val: 100
    on_val: None
    audioslider: audioslider
    imgslider: imgslider

    Slider:
        orientation: root.orientation
        id: audioslider
        min: 20
        max: 100
        step: 10
        value: root.val
        on_value: root.on_val()

    AsyncImage:
        id: imgslider
        source: root.imgpath
        nocache: True


# BoxLayout + black background:

<MBoxLayout>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


# timezone - listitembutton

<ListItemButton>:
    selected_color: .2,.7,.9, 1
    deselected_color: .1,.1,.1, .9
    color: 1,1,1, 1
    #background_normal: ''
    border: 1,1,1,1
